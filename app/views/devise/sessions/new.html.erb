<h2>Iniciar sesión</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
  <div class="col-md-3">
  <div class="field">
    <%= f.email_field :email, autofocus: true ,utocomplete: "on",label:"Correo electrónico" %>
  </div>
  </div>
  </div>
  <div class="row">
  <div class="col-md-3">
  <div class="field">
    <%= f.password_field :password, autocomplete: "off", label:"Contraseña" %>
  </div>
  </div>
  </div>
  <div class="row">
  <div class="col-md-3">
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%#= f.check_box :remember_me ,label:"Recordarme"%>
    </div>
  <% end -%>
  </div>
  </div>
  <div class="row">
  <div class="col-md-3"> 
  <div class="actions">
    <%= f.submit "Entrar" %>
  </div>
  </div>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
